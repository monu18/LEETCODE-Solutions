{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run C++ (macOS)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "SDKROOT=$(xcrun --sdk macosx --show-sdk-path) && clang++ -std=c++17 \"${file}\" -o \"${fileBasenameNoExtension}\" -isysroot \"$SDKROOT\" && \"./${fileBasenameNoExtension}\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}